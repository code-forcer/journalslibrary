
<%- include('../partials/header') %>
<main class="main mt-5 mb-5">
    <style>
        .submission-success {
            margin-top: 50px;
        }
        .submission-id {
            font-size: 1.5rem;
            font-weight: bold;
            background-color: #f8f9fa;
            padding: 10px;
            border-radius: 5px;
        }
        .copy-btn {
            font-size: 1rem;
            margin-left: 10px;
        }
    </style>
    <div class="service-details section submission-success">
        <div class="text-center">
            <h1 class="text-success">Submission Successful!</h1>
            <p>Your manuscript has been successfully submitted. Below is your unique submission ID:</p>
            <div class="submission-id d-inline-block">
                <%= submissionId %>
            </div>
            <button class="btn btn-outline-primary copy-btn" id="copyButton">Copy ID</button>
        </div>
    </div>

    <!-- Add Bootstrap JS and Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
    <script>
        // Function to copy the submission ID to the clipboard
        document.getElementById('copyButton').addEventListener('click', function() {
            const submissionId = document.querySelector('.submission-id').textContent;
            navigator.clipboard.writeText(submissionId).then(function() {
                alert('Submission ID copied to clipboard!');
            }).catch(function(error) {
                console.error('Error copying text: ', error);
            });
        });
    </script>
</main>
<%- include('../partials/footer') %>
